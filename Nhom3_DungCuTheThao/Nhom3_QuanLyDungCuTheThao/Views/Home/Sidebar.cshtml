            if (Model != null)
            {
                foreach (var pc in Model)
                {
                    <li class="list-group-item">
                        <a class="text-dark" href="~/Product/Category/?id=@pc.product_category_id">
                            @pc.product_category_name
                        </a>
                    </li>
                }
            }
        }

    </ul>
</div>
